<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="aidboat-thrusters">

	<xacro:macro name="thrusters" params="prefix reflect reflect2">
		<link name="${prefix}_engine_link">
			<inertial>
				<mass value="0.126" />
				<inertia ixx="0.00002900992" ixy="0" ixz="0" iyy="0.00002900992" iyz="0" izz="0.0001575" />
			</inertial>

			<collision>
				<origin xyz="0.011 0 0" rpy="0 1.5708 ${reflect*(0.0244346)}" />
				<geometry>
					<cylinder length="0.113" radius="0.05"/>
				</geometry>
			</collision>

			<visual>
				<origin rpy="0 0 ${reflect*(0.0244346)}" xyz="0 0 0" />
				<geometry>
					<mesh filename="package://aidboat_description/models/engine/mesh/${prefix}_engine.dae" />
				</geometry>
			</visual>
		</link>

		<link name="${prefix}_propeller_link">
			<inertial>
				<mass value="0.030" />
				<inertia ixx="0.00000058378" ixy="0" ixz="0" iyy="0.00000058378" iyz="0" izz="0.00002177415" />
			</inertial>

			<collision>
				<origin xyz="0.011 0 0" rpy="0 1.5708 ${reflect*(0.0244346)}" />
				<geometry>
					<cylinder length="0.03" radius="0.0381"/>
				</geometry>
			</collision>

			<visual>
				<origin rpy="0 0 ${reflect*(0.0244346)}" xyz="0 0 0" />
				<geometry>
					<mesh filename="package://aidboat_description/models/propeller/mesh/${prefix}_propeller.dae" />
				</geometry>
			</visual>
		</link>


		<joint name="${prefix}_chasis_engine_joint" type="fixed">
			<parent link="base_link" />
			<child link="${prefix}_engine_link" />
			<origin xyz="-0.741 ${reflect2*(0.47)} -0.016" rpy="0 0 0" />
		</joint>


		<joint name="${prefix}_engine_propeller_joint" type="continuous">
			<parent link="${prefix}_engine_link" />
			<child link="${prefix}_propeller_link" />
			<origin xyz="0 0 0" rpy="0 0 0" />
			<axis rpy="0 0 0" xyz="1 0 0" />
			<limit effort="0.7250" velocity="369.97489" />
			<dynamics friction="0.05" damping="0.05" />
		</joint>
	</xacro:macro>

</robot>